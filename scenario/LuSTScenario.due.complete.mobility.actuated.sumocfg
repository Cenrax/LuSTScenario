<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo-sim.org/xsd/sumoConfiguration.xsd">

    <input>
        <net-file value="LuSTScenario.net.xml"/>
        <route-files value="LuSTScenario.busLines.rou.xml DUERoutes/LuSTScenario.local.mobility.0.rou.xml DUERoutes/LuSTScenario.local.mobility.1.rou.xml DUERoutes/LuSTScenario.local.mobility.2.rou.xml LuSTScenario.transit.mobility.rou.xml"/>
        <additional-files value="LuSTScenario.vtypes.add.xml LuSTScenario.busStops.xml LuSTScenario.indLoops.xml LuSTScenario.poly.xml"/>
    </input>

    <output>
        <summary-output value="LuSTScenario.due.complete.mobility.actuated.summary.xml"/>
        <tripinfo-output value="LuSTScenario.due.complete.mobility.actuated.tripinfo.xml"/>
    </output>

    <time>
        <begin value="0"/>
        <step-length value="1"/>
    </time>

    <processing>
        <ignore-junction-blocker value="20"/>
        <time-to-teleport value="600"/>
        <max-depart-delay value="600"/>
        <routing-algorithm value="dijkstra"/>
    </processing>

    <report>
        <verbose value="true"/>
        <log value="LuSTScenario.due.complete.actuated.log"/>
    </report>

</configuration>
